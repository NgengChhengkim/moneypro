<div class="row">
  <div class="col-md-6 col-md-offset-3 devise">
    <h2><%= t "devise.passwords.change_password" %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
      <%= render "shared/errors_messages", object: resource %>
      <%= f.hidden_field :reset_password_token %>

      <p class="field">
        <%= f.label :password, t("devise.passwords.lb_new_password") %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t "devise.passwords.charactor_minimum" %>)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control item" %>
      </p>

      <p class="field">
        <%= f.label :password_confirmation, t("devise.passwords.lb_confirm_password") %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control item" %>
      </p>

      <p class="actions">
        <%= f.submit t("devise.passwords.change_my_password"), class: "btn btn-primary button" %>
      </p>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
