<%= search_form_for @q, url: search_path, class: "form-inline" do |f| %>
  <table class="search">
    <tr>
      <td width="30%"><%= label_tag :type %></td>
      <td>
        <%= collection_select :type, :type_id, Settings.types,
          :first, :last, {include_blank: t("summary.labels.all"),
          selected: (params[:type][:type_id] if params[:type])}, class: "form-control type_select"%>
      </td>
    </tr>
    <tr class="income_category">
      <td><%= label_tag :income_category %></td>
      <td>
        <%= collection_select :income, :income_category_id, IncomeCategory.all,
          :id, :name, {include_blank: t("summary.labels.all"),
          selected: (params[:income][:income_category_id] if params[:income])}, class: "form-control select-list" %>
      </td>
    </tr>
    <tr class="expense_category">
      <td><%= label_tag :expense_category %></td>
      <td>
        <%= collection_select :expense, :expense_category_id, ExpenseCategory.all,
          :id, :name, {include_blank: t("summary.labels.all"),
          selected: (params[:expense][:expense_category_id] if params[:expense])}, class: "form-control select-list" %>
      </td>
    </tr>
    <tr>
      <td><%= f.label :description %></td>
      <td><%= f.text_field :description_cont, class: "form-control select-list" %></td>
    </tr>
    <tr>
      <td><%= f.label :payment_method_id %></td>
      <td>
        <%= f.collection_select :payment_method_id_eq, PaymentMethod.all,
          :id, :name, {include_blank: t("summary.labels.all")},
          class: "form-control select-list" %>
      </td>
    </tr>
    <tr>
      <td><%= f.label :date %></td>
      <td class="input-daterange input-group" id="datepicker">
        <%= f.text_field :date, class: "form-control datepicker" %>
        <span class="input-group-addon"><%= t "search.labels.to" %></span>
        <%= f.text_field :date, class: "form-control datepicker" %>
      </td>
    </tr>
    <tr>
      <td><%= f.submit t("search.actions.search"), class: "btn btn-primary" %></td>
    </tr>
  </table>
<% end %>
