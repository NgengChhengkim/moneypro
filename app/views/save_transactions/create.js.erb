<% if @save_transaction.errors.any? %>
  $(".errors").html("<%= j (render 'shared/errors_messages', object: @save_transaction) %>")
<% else %>
  $(".flash").html("<%= j render 'shared/flash' %>")
  $(".save-transaction-list").html("<%= j render @save_transactions %>")
  $(".statistic").html("<%= j render 'statistic' %>")
  $(".btn-add").html("<%= j render 'btn_add' %>")
  $("#form-modal").modal("hide")
<% end %>
